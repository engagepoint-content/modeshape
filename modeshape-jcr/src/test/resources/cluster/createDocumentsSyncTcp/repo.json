{
    "name": "ClusteredRepository${cluster.testname}",
    "jndiName": "",
    "workspaces" : {
        "default" : "default",
        "allowCreation" : true
    },
    "monitoring" : {
        "enabled" : true
    },
    "security": {
        "anonymous": {
            "roles": [
                "readonly",
                "readwrite",
                "admin"
            ],
            "useOnFailedLogin": true
        }
    },
    
    "storage": {
        "cacheName": "metadata",
        "cacheConfiguration": "../modeshape-jcr/target/test-classes/cluster/${cluster.testname}/infinispan.xml",
        "binaryStorage": {
            "type": "file",
            "directory": "../modeshape-jcr/target/benchmark-create-documents/${cluster.testname}/node${cluster.item.number}/repository/binary",
            "minimumBinarySizeInBytes": 4096
        }
    }
}
